17) let contador = 0
    let vetorOrganizado = []
    let numeros = []
        
    for(let i = 0;i < 10;i++) {
            numeros[i] = +(Math.random() * (10 - 1) + 1).toFixed();
    }

    let j = 0,
    flag = false

    while(flag == false){
        for(let i = 0;i < 11;i++){
            if(numeros[i] == contador){
                vetorOrganizado[j] = numeros[i]
                j++
            } else if (contador == 10){
                flag = true
            } else if (i == 10){
                contador++
            }
        }
    }    

    console.log(vetorOrganizado)






    18) let numeros = [],
    pares = 0,
    impares = 0  
    for(let i = 0;i < 10;i++) {
            numeros[i] = +(Math.random() * (10 - 1) + 1).toFixed();
        }

    let j = -1

    for(let i = 0;i < 10;i++){
        if (numeros[i] % 2 == 0){
            pares += numeros[i]
        }else if (j == -1){
            impares = numeros[i] * 1
            j++
        }else{
            impares = numeros[i] * impares
            j++
        }
    }

    console.log(`Vetor : ${numeros}`)
    console.log(`Soma dos pares : ${pares}`)
    console.log(`Multiplicação dos ímpares : ${impares}`)
        

