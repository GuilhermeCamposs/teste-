       2)   let numeros = []
        let maiorNumero = 0
        for(let i = 0;i < 5;i++){
            let numero = +prompt("Digite um número")
            if (numero > maiorNumero){
                maiorNumero = numero
                numeros.push(maiorNumero)
                posicao = (i )
            }
            numeros[i] = numero
        }
        console.log(numeros)
        console.log(`Maior número é ${maiorNumero}`)
        console.log(`Está na posição numero ${posicao}`)






