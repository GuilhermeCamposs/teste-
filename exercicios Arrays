10)  let vetor = []
        let soma = 0
        let quantNegativos = 0
        for(let i = 0;i < 10;i++){
            vetor[i] = +prompt("Digite os números")
            if (vetor[i] > 0){
                soma += vetor[i]
            }else{
                quantNegativos++
            }
        }
        console.log(`Quantidade de negativos: ${quantNegativos}`)
        console.log(`Soma dos positivos: ${soma}`)







        11)
        let vetor = []
        let maior = 0
        let menor = 1
        for(let i = 0;i < 5;i++){
            vetor[i] = +prompt("Digite o valor")
            if (vetor[i] > maior){
                maior = vetor[i]
            } else if (vetor[i] < menor){
                menor = vetor[i]
            }
        }

        for(let j = 0;j < 5;j++){
            if (vetor[j] == maior){
                console.log(`O maior valor é ${maior} e se encontra na posição ${j}`)
            }else if (vetor[j] == menor){
                console.log(`O menor valor é ${menor} e está na posição ${j}`)
            }
        }








        12)  let flag = false
        let repetidos = [0, 0, 0, 0, 0, 0]
        let contador = -1

        let numeros = []
        for(let i = 0;i < 100;i++) {
            numeros[i] = +(Math.random() * (6 - 1) + 1).toFixed();
        }

        while(flag == false){
            contador++
            for(let j = 0;j < 100;j++){
                switch(numeros[j]){

                    case 1 :
                        repetidos[0]++
                        break
                    case 2 :
                        repetidos[1]++
                        break
                    case 3 :
                        repetidos[2]++
                        break
                    case 4 :
                        repetidos[3]++
                        break
                    case 5 :
                        repetidos[4]++
                        break
                    case 6 :
                        repetidos[5]++
                        break
                }      

                if (j == 99){
                    flag = true
                }

            }   
        }

        let ajuda = 1
        for(let i = 0; i <= 5; i++){
            console.log(`O número ${ajuda} apareceu ${repetidos[i]} vez(es)`)
            ajuda++
            }





        13) 
        let contadorDivisão = 0,
        contador = 0,
        maiorNota = 0,
        soma = 0,
        notas = []

        while(true){
             let numero = +prompt("Digite as notas")
             if(numero < 0){
                break
            }else if(numero > maiorNota){
                maiorNota = numero
            }else{
                notas[contador] = numero
                soma += numero
                contador++
                contadorDivisão++
            }

        }

        let media = soma / contadorDivisão
        console.log(`Média da turma : ${media.toFixed(2)}`)
        console.log(`Maior nota foi : ${maiorNota.toFixed(2)}`) 













